<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/box_merah"
        style="@style/merahBox"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="@dimen/margin_wide"
        android:layout_marginTop="@dimen/margin_wide"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/box_merah"
        app:layout_constraintEnd_toStartOf="@+id/box_biru"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_biru"
        style="@style/biruBox"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/margin_wide"
        android:layout_marginEnd="@dimen/margin_wide"
        android:fontFamily="@font/roboto"
        android:text="@string/box_biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_merah"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_kuning"
        style="@style/kuningBox"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_wide"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/box_kuning"
        app:layout_constraintBottom_toTopOf="@+id/box_orange"
        app:layout_constraintEnd_toStartOf="@+id/box_hijau"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_merah" />

    <TextView
        android:id="@+id/box_hijau"
        style="@style/hijauBox"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:text="@string/box_hijau"
        app:layout_constraintBottom_toTopOf="@+id/box_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_kuning"
        app:layout_constraintTop_toBottomOf="@+id/box_biru" />

    <TextView
        android:id="@+id/box_orange"
        style="@style/orangeBox"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="@string/box_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_kuning" />

    <TextView
        android:id="@+id/box_clear"
        style="@style/clearBox"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/box_clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>